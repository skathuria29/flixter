<style>
    .main-view{
        width: 100%;
        height: 100%;
        visibility: hidden;
        {{!-- padding: 2% 0px; --}}
        
    }

    .billboard{
        width: 100%;
        height: 100%;
        color: #c6c6c6;
    }

    .billboard-card-item{
        width: 100%;
        height: 420px;
        margin: 4% 0px;
    }

    .billboard-card-item .rowHeader{
        height: 25px;
        padding: 5px 3%;
        margin-bottom: 10px;
        font-size: 1.5rem;
    }

    .billboard-card-item .content{
        height: calc( 100% - 25px );
        padding: 5px 3%;
        width: 100%;
    }

    .content-section{
        background-color: #141414;
    }

    .slider-container img {
        width: 100%;
        height: 100%;
    }

    .slider-container{
        width: 95%;
        margin: 0 auto;
    }

    .slick-initialized .slick-slide{
        margin: 0px 5px;
        cursor: pointer;
    }

    {{!-- .slick-slide.hover{
        -webkit-transform: scale(1.2);
        -moz-transform: scale(1.2);
        -o-transform: scale(1.2);
        transform: scale(1.2);
        z-index: 2;
    } --}}
    
    .slick-prev:before, .slick-next:before{
        color: #515151;
    }

    .main-view .latest-movie{
        width: 100%;
        height: 70%;
    }

    .latest-movie img{
        width: 100%;
        height: 100%;
    }

    .latest-card{
        background-size: 100%,cover!important;
        background-position: 50%,50%!important;
        width: 100%;
        height: 100%;
        position: relative;
    }

    .latest-card-info{
        width: 40%;
        position: absolute;
        bottom: 63px;
        left: 40px;
        color: #c6c6c6;
    }


</style>

<div class="main-view">
    <div class="latest-movie">
        {{#if latest.length}}
            {{#each latest}}
                <a href="/home/movie/{{this.id}}">
                    <div class="latest-card" style="background:linear-gradient(rgba(0, 0, 0, 0) 39%, rgba(0, 0, 0, 0) 41%, rgba(0, 0, 0, 0.65) 100%), url('http://image.tmdb.org/t/p/w1280/{{this.backdrop_path}}'), rgb(28, 28, 28)"> 
                        <div class="latest-card-info">
                            <h1>{{this.title}}</h1>
                            <div class="">{{this.overview}}</div>
                        </div>
                    </div>
                </a>
            {{/each}}
        {{/if}}
    </div>
    <div class="billboard">
        {{#if result.length}}
            {{#each result}}
                <div class="billboard-card-item">
                    <div class="rowHeader">
                        <span class="rowTitle">{{this.title}}</span>
                    </div>
                    <div class="content">
                        <div class="slider-container">
                            {{#if this.data.length}}
                                {{#each this.data}}
                                    <div><a href="/home/movie/{{this.id}}"><img class="browser-card-img" src="https://image.tmdb.org/t/p/w500/{{this.poster_path}}"></a></div>
                                {{/each}}
                            {{/if}}
                        </div>
                    </div>
                </div>
            {{/each}}
        {{/if}}
        
    </div>
</div>

<script>

    $(function(){
        debugger
        {{!-- $('.main-v').append(window.loadingDots);
        $('.browse-view-container').addClass('loading-data'); --}}
        setTimeout(function(){
             $('.slider-container').slick({infinite: true,
                slidesToShow: 4,
                slidesToScroll: 4,
                arrows: true,
                 accessibility: false
            })
            $('.main-view').css('visibility' , 'visible');
        },300)
        
    })
   
</script>