<style>
    html {
        height: 100%;
        width: 100%;
        font-size: 62.5%;
    }

    body {
        margin: 0px;
        height: 100%;
        background: #141414 !important;
    }

    .app-container {
        width: 100%;
        background-repeat: no-repeat;
        background-size: cover;
        background-image: url("/img/background.jpg");
        display: flex;
        flex: 1 1 auto;
        min-height: 100%;
        height: auto;
        font-family: 'Lato', sans-serif;
        {{!-- font-family: 'Fjalla One', sans-serif; --}}
    }

    .mheader.sticky {
        position: fixed;
        top: 0;
        width: 100%;
        {{!-- z-index: 2; --}}
    }

    .signup-header {
        height: 70px;
        width: 100%;
        background-color: #212121;
        color: #fff;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        z-index: 999;
    }

    .app-logo {
        height: 100%;
        display: inline-block;
        margin-left: 2%;
        font-size: 33px;
        color: #fff;
        padding-top: 5px;
    }

    .app-logo a {
        color: #04f385;
        /*opacity: 0.8; */
        padding-top: 24px;
        font-family: 'Fjalla One', sans-serif;
    }

    .app-logo a:hover {
        color: #09b767;
        text-decoration: none;
    }

    .subtext-header{
        font-size: 0.8rem;
        margin-top: -2px;
    }

    .sign-in-container {
        float: right;
        margin : 15px 3%;
        display: flex;
        flex-direction: row;
        flex-wrap: nowrap;
    }

    .user-signout{
        {{!-- position: fixed;
        right: 30px;
        top: 22px; --}}
        cursor: pointer;
        padding-top: 10px;
        margin-left: 15px;
    }
    .user-signout i{
        font-size: 1.2em;
        color: #ccc;
    }

    .user-details{
        padding-top: 8px;
        display : none ;
    }

    .user-details .username{
        display: inline-block;
        padding: 0px 10px 0px 2px;
        font-family: 'Fjalla One', sans-serif;
        font-weight: 200;
    }

    .sign-in-container .search {
        margin-right: 0px;
    }
    
    .sign-in-btn {
        padding: 11px;
        font-size: 16px;
        font-weight: 400;
    }

    .content-section {
        box-sizing: border-box;
        padding-top: 70px;
        width: 100%;
        min-height: 100%;
        display: flex;
        flex-wrap: wrap;
        align-content: flex-start;
        justify-content: center;
    }


    .loader {
        width: 100%;
        height: 60px;
        border-radius: 100%;
        position: relative;
        margin: 0 auto;
        text-align: center;
    }

    #loader-4 span {
        display: inline-block;
        width: 20px;
        height: 20px;
        border-radius: 100%;
        background-color: #7c7e7f;
        margin: 15px 5px;
        opacity: 0;
    }

    #loader-4 span:nth-child(1) {
        animation: opacitychange 1s ease-in-out infinite;
    }

    #loader-4 span:nth-child(2) {
        animation: opacitychange 1s ease-in-out 0.33s infinite;
    }

    #loader-4 span:nth-child(3) {
        animation: opacitychange 1s ease-in-out 0.66s infinite;
    }

    @keyframes opacitychange {
        0%,
        100% {
            opacity: 0;
        }

        60% {
            opacity: 1;
        }
    }

    
    .slider-container img {
        width: 100%;
        height: 100%;
        webkit-transform: scale(1);
        transform: scale(1);
        -webkit-transition: .3s ease-in-out;
        transition: .3s ease-in-out;
    }

    .billboard .browser-card-img:hover {
        -webkit-transform: scale(0.9);
        transform: scale(0.9);
    }

    /* ------ */
    .browse-view{
        position: relative;
        height: 100%;
        z-index: 0;
        padding-top: 2%;
        width: 90%;
        color: #c6c6c6;
    }
   

    .browse-view-item{
        width: 140px;
        height: 180px;
        float: left;
        background-color: #272626;
        margin: 10px;
        cursor: pointer;
        position: relative;
    }
   
    .browse-view-container{
        width: 95%;
        height: 100%;
        margin: 0 auto;
        margin-top: 2%;
    }

      
    .browser-card-img{
        width: 100%;
        height: 100%;
        position: relative;
        transition:all .2s ease-in-out;
        -webkit-transition:all .2s ease-in-out;
        -moz-transition:all .2s ease-in-out;
        -ms-transition:all .2s ease-in-out;
        -o-transition:all .2s ease-in-out;
    }

    .browser-card-img:hover{
        -webkit-transform: scale(1.2);
        -moz-transform: scale(1.2);
        -o-transform: scale(1.2);
        transform: scale(1.2);
        z-index: 2;
    }

     .card-info {
        position: absolute;
        bottom: 0%;
        height: 200px;
        color: white;
        padding: 10px;
        /* background-color: #605f5f; */
        /* opacity: 0.5; */
        width: 100%;
        background-color: rgba(183, 183, 183, 0.3);
        display: none;
    }

    .card-name {
        font-weight: bold;
        height: 25px;
        text-overflow: ellipsis;
        white-space: nowrap;
        overflow: hidden;
    }

    .card-release-date{
        height: 20px;
    }

    .card-overview{
        display: -webkit-box;
        -webkit-line-clamp: 7;
        -webkit-box-orient: vertical;
        /* max-width: 156px; */
        overflow: hidden;
        text-overflow: ellipsis;
        height: 130px;
        font-size: 0.9em;
        margin-top: 5px;
    }

    /* ---- media queries ---- */
     @media (min-width : 45rem){
        .browse-view-item{
            width: 18%;
            height: 250px;
            float: left;
            background-color: #272626;
            margin: 0px 1% 2% 1%;
            cursor: pointer;
            position: relative;
        }

        .user-details{
            display: block;
        }

        .sign-in-container .search {
            margin-right: 25px;
        }
    }

    .ui-message-container{
        color: white;
        /* height: 34px; */
        display: table;
        width: 100%;
        padding: 10px;
        background-color: #b6882d;
        border-radius: 5px;
        margin: 0 0 16px;
    }

    .ui-message-contents{
        display: inline-block;
        font-weight: bold;
    }

</style>

