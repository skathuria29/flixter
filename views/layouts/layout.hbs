<script>
    
    window.loadingDots = $('<div class="loader" id="loader-4"><span></span><span></span><span></span></div>')
    {{!-- const user = {{@user}}; --}}
    window.addEventListener('scroll', stickyHeader);

    var header = document.getElementById("pinning-header");
    var sticky = header.offsetTop;

    function stickyHeader() {
        //
        if (window.pageYOffset > sticky) {
            header.classList.add("sticky");
        } else {
            header.classList.remove("sticky");
        }
    }

    $('.ui.movieSearch.input').on('change' , function(){
        
        const search_words = $(this).find('input').val();
        //console.log(search_words);

        $.ajax({
            type: 'POST',
            url: '/home/search/movie/',
            contentType: 'application/json',
            data : JSON.stringify({keyword : search_words}),
            dataType : 'html',
            success: function(html) {
                
                $('body').html(html);
            },
            error: function(e) {
                
                console.log(e.message);
            }

        })

    })
    
</script>